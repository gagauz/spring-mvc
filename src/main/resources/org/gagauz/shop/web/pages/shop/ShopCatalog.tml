<t:buyer.MainTemplate xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd" xmlns:p="tapestry:parameter">
<t:loop source="products" value="product">
	<t:shop.ProductCard product="product" zone="zoomIn"/>
</t:loop>

<div class="modal fade" tabindex="-1" role="dialog" id="zoomIn-modal">
	<t:zone t:id="zoomIn">
		<t:shop.ProductDetails product="zoomProduct" />
	</t:zone>
</div>

</t:buyer.MainTemplate>